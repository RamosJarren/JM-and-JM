from tkinter import *

class Calculator:
    def __init__(self, win):
        self.screen = Entry(win, bd = 15, justify = "center")
        self.screen.place(x = 0, y = 0, width = 250, height = 60)
        self.clear = Button(win, text = "C")
        self.clear.place(x = 0, y = 60, width = 250, height = 50)
        self.seven = Button(win, text = "7")
        self.seven.place(x = 0, y = 110, width = 62, height = 50)
        self.eight = Button(win, text = "8")
        self.eight.place(x = 62, y = 110, width = 62, height = 50)
        self.nine = Button(win, text = "9")
        self.nine.place(x = 124, y = 110, width = 62, height = 50)
        self.divide = Button(win, text = "/")
        self.divide.place(x = 186, y = 110, width = 63, height = 50)
        self.four = Button(win, text = "4")
        self.four.place(x = 0, y = 160, width = 62, height = 50)
        self.five = Button(win, text = "5")
        self.five.place(x = 62, y = 160, width = 62, height = 50)
        self.six = Button(win, text = "6")
        self.six.place(x = 124, y = 160, width = 62, height = 50)
        self.multiply = Button(win, text = "*")
        self.multiply.place(x = 186, y = 160, width = 63, height = 50)
        self.one = Button(win, text = "1")
        self.one.place(x = 0, y = 210, width = 62, height = 50)
        self.two = Button(win, text = "2")
        self.two.place(x = 62, y = 210, width = 62, height = 50)
        self.three = Button(win, text = "3")
        self.three.place(x = 124, y = 210, width = 62, height = 50)
        self.subtract = Button(win, text = "-")
        self.subtract.place(x = 186, y = 210, width = 63, height = 50)
        self.zero = Button(win, text = "0")
        self.zero.place(x = 0, y = 260, width = 83, height = 50)
        self.period = Button(win, text = ".")
        self.period.place(x = 83, y = 260, width = 83, height = 50)
        self.add = Button(win, text = "+")
        self.add.place(x = 166, y = 260, width = 83, height = 50)
        self.equal = Button(win, text = "=")
        self.equal.place(x = 0, y = 310, width = 250, height = 50)

win = Tk()
mywin = Calculator(win)
win.geometry("250x365")
win.title("GUI Calculator")
win.mainloop()
